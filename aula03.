def main():
    # Inicializar variáveis
    quantidade_numeros = 0
    soma_numeros = 0
    
    while True:
        # Ler um número inteiro do usuário
        numero = int(input('Digite um número inteiro (0 para sair): '))
        
        # Verificar se o número é 0
        if numero == 0:
            break
        
        # Atualizar a quantidade de números digitados
        quantidade_numeros += 1
        
        # Atualizar a soma dos números
        soma_numeros += numero
    
    # Calcular a média aritmética
    if quantidade_numeros > 0:
        media_aritmetica = soma_numeros / quantidade_numeros
    else:
        media_aritmetica = 0
    
    # Exibir a quantidade de números digitados, a soma e a média aritmética
    print(f'Quantidade de números digitados: {quantidade_numeros}')
    print(f'Soma dos números: {soma_numeros}')
    print(f'Média aritmética: {media_aritmetica:.2f}')

# Chamar a função principal
if __name__ == '__main__':
    main()

